<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top|left"
    android:layout_margin="@dimen/marginMedium"
    android:padding="@dimen/marginSmallMedium"
    android:background="@drawable/dlg_list_items_bg"
    android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_Extension"
            style="@style/genDialogListItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:paddingLeft="@dimen/marginMedium"
            android:singleLine="true" />
                
        <TextView
            android:id="@+id/textView_Short"
            style="@style/genDialogListSubItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:paddingRight="@dimen/marginMedium"
            android:singleLine="true"/>

</RelativeLayout>