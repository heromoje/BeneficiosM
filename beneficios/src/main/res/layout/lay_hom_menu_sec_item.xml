<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/marginZero" >

    <!-- Section -->

    <RelativeLayout
        android:id="@+id/llSection"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/men_item_height"
        android:background="@color/white"
        android:orientation="horizontal"
        tools:ignore="UselessParent" >

        <ImageView
            android:id="@+id/ivSectionIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/men_icon_dsc_sec_default"
            android:scaleType="matrix" />
        <TextView
            android:id="@+id/textView_SectionName"
            style="@style/menSectionListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Valor Ahorrado"
            android:layout_toRightOf="@+id/ivSectionIcon"
            android:layout_toEndOf="@+id/ivSectionIcon" />
        <TextView
            android:id="@+id/textView_AmountSaved"
            style="@style/menHeadSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/dsc_list_discount_blue_bg"
            android:textColor="@color/white"
            android:text="0.00 Bs"/>
    </RelativeLayout>

</LinearLayout>