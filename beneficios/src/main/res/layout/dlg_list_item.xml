<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top|left"
    android:layout_margin="@dimen/marginMedium"
    android:background="@drawable/dlg_list_items_bg"
    android:orientation="vertical" >

        <TextView
            android:id="@+id/tvCompany"
            style="@style/genDialogListItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginSmallMedium"
            android:ellipsize="end"
            android:paddingLeft="@dimen/marginMedium"
            android:singleLine="true" />
                
        <TextView
            android:id="@+id/tvAddress"
            style="@style/genDialogListSubItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginSmallMedium"
            android:ellipsize="end"
            android:paddingLeft="@dimen/marginMedium"
            android:singleLine="true" />

</LinearLayout>